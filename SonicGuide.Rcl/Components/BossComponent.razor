@if (Boss is not null)
{
    <div class="boss-div">
        <div>
            <button class="btn btn-secondary"
                @onclick=SpeakBossName>
                @Boss.Name
            </button>
        </div>
        @if (!string.IsNullOrEmpty(Boss.Image))
        {
            <img src="_content/SonicGuide.Rcl/img/@Boss.Image" hidden="@hideImage" @onerror=OnImgError />
        }
    </div>
}
