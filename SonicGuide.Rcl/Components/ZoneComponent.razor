@if (Zone is not null)
{
    <div class="zone-div">
        <h1><button class="btn btn-secondary" @onclick=SpeakZoneName>@Zone.name</button></h1>
        <h2>@Zone.order</h2>
        @if (!string.IsNullOrEmpty(Zone.image))
        {
            <img src="_content/SonicGuide.Rcl/img/@Zone.image" hidden="@hideImage" @onerror=OnImgError />
        }

        @if (Zone.acts is not null)
        {
            @foreach (var act in Zone.acts)
            {
                <ActComponent Game="Game" Zone="Zone" Act="act" />
            }
        }

        @if (Zone.bosses is not null)
        {
            @foreach (var boss in Zone.bosses)
            {
                <BossComponent Game="Game" Zone="Zone" Act="null" Boss="boss" />
            }
        }
    </div>
}
