@if (Game is not null)
{
    <div class="game-div">
        <h1><button class="btn btn-secondary" @onclick=SpeakGameName>@Game.name</button></h1>
        <h2>@Game.order</h2>
        @if (!string.IsNullOrEmpty(Game.image))
        {
            <img src="_content/SonicGuide.Rcl/img/@Game.image" hidden="@hideImage" @onerror=OnImgError />
        }

        @if (Game.zones is not null)
        {
            @foreach (var zone in Game.zones)
            {
                <ZoneComponent Game="Game" Zone="zone" />
            }
        }
    </div>
}
